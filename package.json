{
  "name": "tpeg",
  "version": "0.0.8",
  "module": "index.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": {
        "default": "./dist/index.d.ts"
      },
      "default": {
        "default": "./dist/index.js"
      }
    }
  },
  "files": [
    "src",
    "dist",
    "README.md",
    "package.json"
  ],
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0"
  },
  "scripts": {
    "prepare": "bunx husky",
    "dev": "bun run ./src/index.ts",
    "typecheck": "tsc --noEmit",
    "build": "bun run build:types && bun build ./src/index.ts --outdir ./dist",
    "build:types": "tsc ./src/index.ts --declaration --outDir ./dist/ --emitDeclarationOnly --skipLibCheck",
    "lint": "bunx biome lint --write ./src",
    "check": "bunx biome check --write ./src",
    "fix": "bunx biome check --fix --unsafe ./src"
  }
}
