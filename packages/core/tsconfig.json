{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "dist",
    "rootDir": "./src",
    "skipLibCheck": true,
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "allowUnusedLabels": true
  },
  "include": ["src/**/*"]
}
